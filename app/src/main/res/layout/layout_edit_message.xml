<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/edit_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/edit_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/edit_message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edit_message_name"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:gravity="bottom|right"
            android:textSize="17dp"
            android:text="真实姓名:"
            android:visibility="gone"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp">

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_message_second_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="-35dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/edit_message_second_name"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:gravity="bottom|right"
            android:textSize="17dp"
            android:text="身份证:"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp">
            <EditText
                android:id="@+id/edit_message_second"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>